    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <ListView
                android:id="@+id/simpleListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_above="@+id/buttons">

            </ListView>


        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_margin="10dp"
            android:layout_gravity="bottom"
            android:weightSum="4"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            >
            <ImageView android:id="@+id/ic_logo1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_culture"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"/>
            <ImageView android:id="@+id/ic_logo2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_nature"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"/>
            <ImageView android:id="@+id/ic_logo3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_in_progress"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"/>
            <ImageView android:id="@+id/ic_logo4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_visited"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"/>
        </LinearLayout>


    </RelativeLayout >
